    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["app.main:app", "--reload", "--env-file", ".env", "--log-level", "debug" ],
            "jinja": true,
            "cwd": "${workspaceFolder}/src/api"
          },
          {
            "name": "Python Debugger: Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "app.py" ],
            "jinja": true,
            "cwd": "${workspaceFolder}/src/web",
            "env": {
                "API_BASE_URL": "http://127.0.0.1:8000"
            }
          }
    ]
}